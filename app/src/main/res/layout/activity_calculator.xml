<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".CalculatorActivity">

    <TextView
        android:id="@+id/text_view_operation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:background="@drawable/borders"
        android:ellipsize="start"
        android:inputType="text"
        android:maxLines="1"
        android:paddingHorizontal="5dp"
        android:paddingVertical="22dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- Group1-->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_C"
        android:layout_width="@dimen/button_calculator_68dp"
        android:layout_height="@dimen/button_calculator_68dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/selector_button_signs"
        android:text="C"
        android:textColor="@color/button_signs_text_color"
        app:layout_constraintBottom_toTopOf="@id/button_7"
        app:layout_constraintEnd_toStartOf="@+id/button_X"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_operation" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_X"
        android:layout_width="@dimen/button_calculator_68dp"
        android:layout_height="@dimen/button_calculator_68dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/selector_button_signs"
        android:text="X"
        android:textColor="@color/button_signs_text_color"
        app:layout_constraintBottom_toTopOf="@id/button_8"
        app:layout_constraintEnd_toStartOf="@+id/button_div"
        app:layout_constraintStart_toEndOf="@+id/button_C"
        app:layout_constraintTop_toBottomOf="@+id/text_view_operation" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_div"
        android:layout_width="@dimen/button_calculator_68dp"
        android:layout_height="@dimen/button_calculator_68dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/selector_button_signs"
        android:text="/"
        android:textColor="@color/button_signs_text_color"
        app:layout_constraintBottom_toTopOf="@id/button_9"
        app:layout_constraintEnd_toStartOf="@+id/button_mult"
        app:layout_constraintStart_toEndOf="@+id/button_X"
        app:layout_constraintTop_toBottomOf="@+id/text_view_operation" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_mult"
        android:layout_width="@dimen/button_calculator_68dp"
        android:layout_height="@dimen/button_calculator_68dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/selector_button_signs"
        android:text="*"
        android:textColor="@color/button_signs_text_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_div"
        app:layout_constraintTop_toBottomOf="@id/text_view_operation" />

    <!-- Group2-->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_7"
        android:layout_width="@dimen/button_calculator_68dp"
        android:layout_height="@dimen/button_calculator_68dp"
        android:layout_marginTop="16dp"
        android:style="@style/custom_number_button"
        android:text="7"
        app:layout_constraintEnd_toStartOf="@+id/button_X"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_C" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_8"
        android:layout_width="@dimen/button_calculator_68dp"
        android:layout_height="@dimen/button_calculator_68dp"
        android:layout_marginTop="16dp"
        android:text="8"
        android:style="@style/custom_number_button"
        app:layout_constraintEnd_toStartOf="@+id/button_div"
        app:layout_constraintStart_toEndOf="@+id/button_7"
        app:layout_constraintTop_toBottomOf="@+id/button_X" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_9"
        android:layout_width="@dimen/button_calculator_68dp"
        android:layout_height="@dimen/button_calculator_68dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/selector_button_numbers"
        android:text="9"
        android:style="@style/custom_number_button"
        app:layout_constraintEnd_toStartOf="@+id/button_mult"
        app:layout_constraintStart_toEndOf="@+id/button_8"
        app:layout_constraintTop_toBottomOf="@+id/button_div" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_minus"
        android:layout_width="@dimen/button_calculator_68dp"
        android:layout_height="@dimen/button_calculator_68dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/selector_button_signs"
        android:text="-"
        android:textColor="@color/button_signs_text_color"
        app:layout_constraintEnd_toEndOf="@id/button_mult"
        app:layout_constraintStart_toStartOf="@id/button_mult"
        app:layout_constraintTop_toBottomOf="@id/button_mult" />

    <!-- Group3-->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_4"
        android:layout_width="@dimen/button_calculator_68dp"
        android:layout_height="@dimen/button_calculator_68dp"
        android:layout_marginTop="16dp"
        android:text="4"
        android:style="@style/custom_number_button"
        app:layout_constraintEnd_toStartOf="@+id/button_X"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_7" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_5"
        android:layout_width="@dimen/button_calculator_68dp"
        android:layout_height="@dimen/button_calculator_68dp"
        android:layout_marginTop="16dp"
        android:style="@style/custom_number_button"
        android:text="5"
        app:layout_constraintEnd_toStartOf="@+id/button_div"
        app:layout_constraintStart_toEndOf="@+id/button_7"
        app:layout_constraintTop_toBottomOf="@+id/button_8" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_6"
        android:layout_width="@dimen/button_calculator_68dp"
        android:layout_height="@dimen/button_calculator_68dp"
        android:layout_marginTop="16dp"
        android:style="@style/custom_number_button"
        android:text="6"
        app:layout_constraintEnd_toStartOf="@+id/button_mult"
        app:layout_constraintStart_toEndOf="@+id/button_8"
        app:layout_constraintTop_toBottomOf="@+id/button_9" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_plus"
        android:layout_width="@dimen/button_calculator_68dp"
        android:layout_height="@dimen/button_calculator_68dp"
        android:layout_marginTop="16dp"
        android:style="@style/custom_number_button"
        android:text="+"
        app:layout_constraintEnd_toEndOf="@id/button_mult"
        app:layout_constraintStart_toStartOf="@id/button_mult"
        app:layout_constraintTop_toBottomOf="@+id/button_minus" />

    <!-- Group4-->


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_1"
        android:layout_width="@dimen/button_calculator_68dp"
        android:layout_height="@dimen/button_calculator_68dp"
        android:layout_marginTop="16dp"
        android:text="1"
        android:style="@style/custom_number_button"
        app:layout_constraintEnd_toStartOf="@+id/button_X"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_4" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_2"
        android:layout_width="@dimen/button_calculator_68dp"
        android:layout_height="@dimen/button_calculator_68dp"
        android:layout_marginTop="16dp"
        android:text="2"
        android:style="@style/custom_number_button"
        app:layout_constraintEnd_toStartOf="@+id/button_div"
        app:layout_constraintStart_toEndOf="@+id/button_7"
        app:layout_constraintTop_toBottomOf="@+id/button_5" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_3"
        android:layout_width="@dimen/button_calculator_68dp"
        android:layout_height="@dimen/button_calculator_68dp"
        android:layout_marginTop="16dp"
        android:text="3"
        android:style="@style/custom_number_button"
        app:layout_constraintEnd_toStartOf="@+id/button_mult"
        app:layout_constraintStart_toEndOf="@+id/button_8"
        app:layout_constraintTop_toBottomOf="@+id/button_6" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_equal"
        android:layout_width="@dimen/button_calculator_68dp"

        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/selector_button_signs"
        android:text="="
        android:textColor="@color/button_signs_text_color"
        app:layout_constraintBottom_toBottomOf="@+id/button_dot"
        app:layout_constraintEnd_toEndOf="@id/button_mult"
        app:layout_constraintStart_toStartOf="@id/button_mult"
        app:layout_constraintTop_toBottomOf="@id/button_plus" />

    <!-- Group5-->


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_mode"
        android:layout_width="@dimen/button_calculator_68dp"
        android:layout_height="@dimen/button_calculator_68dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/selector_button_signs"
        android:text="%"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/button_X"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_0"
        android:layout_width="@dimen/button_calculator_68dp"
        android:layout_height="@dimen/button_calculator_68dp"
        android:layout_marginTop="16dp"
        android:style="@style/custom_number_button"
        android:text="0"
        app:layout_constraintEnd_toStartOf="@+id/button_div"
        app:layout_constraintStart_toEndOf="@+id/button_7"
        app:layout_constraintTop_toBottomOf="@+id/button_2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_dot"
        android:layout_width="@dimen/button_calculator_68dp"
        android:layout_height="@dimen/button_calculator_68dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/selector_button_signs"
        android:text="."
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/button_mult"
        app:layout_constraintStart_toEndOf="@+id/button_8"
        app:layout_constraintTop_toBottomOf="@+id/button_3" />


</androidx.constraintlayout.widget.ConstraintLayout>